rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regras para 'medicamentos'
    match /medicamentos/{medId} {
      allow read, delete, update: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // !!!!! ADICIONE ESTE NOVO BLOCO !!!!!
    // Regras para 'users'
    match /users/{userId} {
      // Permite que um usuário leia ou escreva (crie/atualize)
      // o seu PRÓPRIO documento de usuário, e mais ninguém.
      allow read, write: if request.auth.uid == userId;
    }
  }
}